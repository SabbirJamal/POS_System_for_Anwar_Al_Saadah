<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addinventory"
    android:background="@drawable/adminwallpaper">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:backgroundTint="#0A3CF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory Management"
            android:layout_marginTop="15sp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:textSize="20sp"
            android:text="Jamal Osmanghoni"
            android:textColor="@color/white"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-530sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Stock"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />



    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="635dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Phone No. :"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Order ID :"
                    android:textSize="20sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="65dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name :"
                    android:textSize="20sp"
                    android:layout_marginTop="145dp"
                    android:layout_marginStart="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Email :"
                    android:textSize="20sp"
                    android:layout_marginTop="210dp"
                    android:layout_marginStart="45dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contractor Name :"
                    android:textSize="20sp"
                    android:layout_marginTop="275dp"
                    android:layout_marginStart="35dp"/>

                <EditText
                    android:id="@+id/cphn"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/ioid"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Order ID"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/cname"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="143dp"/>

                <TextView
                    android:id="@+id/cemail"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Company Email"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="208dp"/>

                <TextView
                    android:id="@+id/ccontractor"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Contractor Name"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="275dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Cloth name :"
                    android:textSize="20sp"
                    android:layout_marginStart="88dp"
                    android:layout_marginTop="340dp"/>

                <EditText
                    android:id="@+id/clothname"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Cloth Name"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="325dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="395dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Name :"
                    android:textSize="20sp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Roll :"
                    android:textSize="20sp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Each Roll Length :"
                    android:textSize="20sp"
                    android:layout_marginTop="145dp"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price per Roll :"
                    android:textSize="20sp"
                    android:layout_marginTop="210dp"
                    android:layout_marginStart="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textSize="20sp"
                    android:layout_marginTop="275dp"
                    android:layout_marginStart="142dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price :"
                    android:textSize="20sp"
                    android:layout_marginTop="340dp"
                    android:layout_marginStart="90dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Length :"
                    android:textSize="20sp"
                    android:layout_marginTop="405dp"
                    android:layout_marginStart="75dp"/>



                <EditText
                    android:id="@+id/suppliername"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Supplier Name"
                    android:textSize="20sp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="-10dp"/>

                <EditText
                    android:id="@+id/numberofrolls"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Number of Rolls"
                    android:textSize="20sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/length"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Length"
                    android:textSize="20sp"
                    android:layout_marginTop="126dp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:textSize="20sp"
                    android:layout_marginTop="190dp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/date"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:textSize="20sp"
                    android:layout_marginTop="257dp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/totalprice"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Total Price"
                    android:textSize="20sp"
                    android:layout_marginTop="319dp"
                    android:layout_marginStart="210dp"/>

                <EditText
                    android:id="@+id/totallength"
                    android:layout_width="160dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Total Length"
                    android:textSize="20sp"
                    android:layout_marginTop="387dp"
                    android:layout_marginStart="210dp"/>


                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="500dp"
                    android:text="Add Stock"
                    android:layout_marginStart="150dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

