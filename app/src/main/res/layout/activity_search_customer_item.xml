<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_CustomerItem">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#0FE2CA"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <ImageView
                android:id="@+id/imgmenu"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/baseline_menu_24" />

            <ImageView
                android:id="@+id/imgtransfer"
                android:layout_width="35dp"
                android:layout_marginStart="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_transfer_within_a_station_24" />

            <ImageView
                android:id="@+id/imghome"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                app:srcCompat="@drawable/baseline_home_24" />

            <ImageView
                android:id="@+id/imgsearch"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginStart="75dp"
                app:srcCompat="@drawable/baseline_search_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-20dp"
        android:backgroundTint="#0FE2CA"
        app:cardCornerRadius="30dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/baseline_person_pin_24" />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/fullnametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name" />

                    <TextView
                        android:id="@+id/employeetypetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of person" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee ID :"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date :"
                        android:textAlignment="textEnd"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/employeeidtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"/>

                    <TextView
                        android:id="@+id/currentdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date :"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="150dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search..."
                android:drawableStart="@android:drawable/ic_menu_search"
                android:background="@android:drawable/edit_text"
                android:inputType="text"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="220dp"
            android:layout_marginStart="15dp">

            <Button
                android:id="@+id/searchbyid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search By ID" />

            <Button
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search By Phone Number" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecycleView"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="280dp" />

    </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>