<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newSale">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="-20dp"
                android:backgroundTint="#0FE2CA"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/baseline_person_pin_24"
                            tools:layout_editor_absoluteX="35dp"
                            tools:layout_editor_absoluteY="89dp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Type of person" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Employee ID :"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Employee ID:"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:textAlignment="center"
                android:text="New Sale"
                android:textSize="20dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="200dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingBottom="10dp"
                        android:text="Phone number :"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:textAlignment="textEnd"
                        android:text="Name :"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingBottom="10dp"
                        android:text="Email :"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="200dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="-11dp"
                        android:paddingBottom="10dp"
                        android:hint="Phone Number"
                        />

                    <TextView
                        android:id="@+id/custname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Name :"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/custemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Email :"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Orders"
                android:layout_marginTop="320dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="340dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <CheckBox
                        android:id="@+id/cbdress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dress"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbmoriolla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moriolla"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbkhamez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khameez"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbanabi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anabi"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbshaila"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shaila"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbmundeel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mundeel"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/dressprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="4"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/moriollaprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="19dp"
                        android:text="5"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/khameezprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="4"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/anabiprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="4"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/shailaprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="4"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/mundeelprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="3"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <EditText
                        android:id="@+id/dressquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                    <EditText
                        android:id="@+id/moriollaquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                    <EditText
                        android:id="@+id/khameezquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                    <EditText
                        android:id="@+id/anabiquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                    <EditText
                        android:id="@+id/shailaquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                    <EditText
                        android:id="@+id/mundeelquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="QTY" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/dresstotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/moriollatotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="19dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/khameeztotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/anabitotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/shailatotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/mundeeltotamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="21dp"
                        android:text="Total Amount"
                        android:textSize="20dp" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:layout_marginTop="650dp"
                android:layout_marginStart="150dp"/>








        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>